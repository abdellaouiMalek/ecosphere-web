{% extends 'base.html.twig' %}

{% block title %}Historique{% endblock %}

{% block body %}
    <h1>Historique</h1>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>InitialCondition</th>
            <th>Date</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        
    
    <tbody>
        {% for historique in historiques %}
            <tr>
                <td>{{ historique.id }}</td>
                <td>{{ historique.getNomo() }}</td>
                <td>{{ historique.initialCondition }}</td>
                <td>{{ historique.date|date('Y-m-d H:i:s') }}</td>
                <td>
                    <a href="{{ path('app_historique_edit', {'id': historique.id}) }}" class="btn btn-info">edit</a>
                </td>
                <td>   
                    <a href="{{ path('app_historique_delete', {'id': historique.id}) }}"class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    


{% endblock %}
