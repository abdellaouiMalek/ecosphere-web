{% extends 'base.html.twig' %}

{% block title %}Store
{% endblock %}

{% block body %}
	<div class="row mb-3">
		<div class="col">
			<h1>Store : {{ store.StoreName }}</h1>
		</div>
		<div class="col text-end">
    <div class="d-inline-block">
        {{ include('store/_delete_form.html.twig') }}
        <a href="{{ path('app_store_edit', {'id': store.id}) }}" class="btn btn-secondary">Edit</a>
    </div>
</div>

	</div>


	<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
		<div class="card shadow p-3 mb-5 bg-white rounded" style="max-width: 1100px;">
			<div class="card-body">
				<table class="table table-borderless">
					<tbody>
						<tr>
							{% if store.photo %}


								<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">

									<img src="{{ asset('uploads/images/' ~ store.photo) }}" style="max-width: 1000px; max-height: 1000px;">

								</div>
							{% endif %}
						</tr>
						<tr>
							<th>StoreName</th>
							<td>{{ store.StoreName }}</td>
						</tr>
						<tr>
							<th>Address</th>
							<td>{{ store.address }}</td>
						</tr>
						<tr>
							<th>PhoneNumber</th>
							<td>{{ store.phoneNumber }}</td>
						</tr>

					</tbody>
				</table>
			</div>
		</div>
	</div>


{% endblock %}
