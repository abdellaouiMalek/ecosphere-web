{% extends 'base.html.twig' %} 

{% set queryParams = app.request.query.all %}
{% block content %}
<!DOCTYPE html>

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/stylesidebar.css">
    
    <style>
    body {
        background-color: #f0fff0; /* Light green background color */
    }
    
    .navigation {
        display: flex;
        justify-content: center;
        margin-bottom: 8px;
    }

    .pagination {
        /* Add your pagination styles here */
    }

    .pagination a {
        /* Add styles for pagination links */
    }

    .pagination .active {
        /* Add styles for active pagination link */
    }
</style>
    <div class="wrapper d-flex align-items-stretch">

            {% include 'content/sidebar.html.twig' %}

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
       
            <section id="community-events" class="text-center py-5">
                <div class="container">
                    <h2 class="section-title">Community Events</h2>
                    <p class="section-description">Discover upcoming events in our community.</p>
                </div>
            </section>

            <div class="bg-primary text-white p-4 mb-3 text-center">
                <p class="lead mb-0">Have an event to suggest? Click below to add it and fill the form with the necessary details!</p>
                <a href="{{ path('app_add_event') }}" class="btn btn-light mt-3">Add Event</a>
            </div>

            <div class="p-4 mb-3 text-center">
    <p>Filter</p>
    <form id="filters" style="display: inline-block;">
        {% for categorie in category %}
            {# On vérifie si la catégorie est dans les paramètres #}
            {% if queryParams is not empty and queryParams.category is defined %}
                {% set checked = (categorie.id in queryParams.category) ? "checked" : "" %}
            {% else %}
                {% set checked = "" %}
            {% endif %}
            <p style="display: inline-block; margin-right: 10px;">
                <input type="checkbox" name="category[]" id="cat{{categorie.id}}" value="{{categorie.id}}" {{checked}}>
                <label for="cat{{categorie.id}}">{{categorie.name}}</label>
            </p>
        {% endfor %}
        <input type="hidden" name="page" value="{{page}}">
    </form>
</div>


            <div class="container-fluid" style="padding-left: 15px; padding-right: 15px;">
                <!-- Add Event Context -->
                <div class="row">
                    {% for event in events %}
                        <div class="col-md-3 mb-4">
                            <div class="card h-100 shadow position-relative">
                                <img src="{{ asset('uploads/images/' ~ event.image) }}" class="card-img-top" alt="Hollywood Sign on The Hill"/>
                                <div class="card-body position-relative">
                                    <!-- Date Container -->
                                    <div class="date-container bg-success text-white p-2 position-absolute top-0 start-0">
                                        <p class="mb-0">{{ event.date ? event.date|date('m/d/Y') : '' }}</p>
                                        
                                    </div>
                                          
                                    <h5 class="card-title" style="margin-top: 40px;">{{ event.eventName }}</h5>

                                    <p class="card-text">
                                        <p><strong>Location:</strong> {{ event.location }}</p>
                                        
                                        <p><strong>Category:</strong> {{ event.category.name }}</p>
                                    </p>
                                    <!-- More Details Link -->
                                    <a href="{{ path('more_details', {id:event.id}) }}" class="position-absolute bottom-0 start-0 p-3 text-decoration-none">More Details</a>
                                </div>
                                <div class="position-absolute bottom-0 end-0 p-2">
    <button id="registerInterestBtn" class="btn btn-primary register-interest-btn" data-event-id="{{ event.id }}">Interested</button>
</div>
                                
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

{% set queryParams = app.request.query.all %}
    {% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajax")|url_encode %}

              <ul class="pagination">
        <li class="{{ (page == 1) ? 'disabled' : '' }}">
            <a href="?page=1">
                <i class="fas fa-step-backward"></i>
            </a>
        </li>    
        <li class="{{ (page == 1) ? 'disabled' : '' }}">
            <a href="{{ (page > 1) ? '?page=' ~ (page - 1) : '' }}">
                <i class="fas fa-angle-left"></i>
            </a>
        </li>
        {% set pages = (total / limit)|round(0, 'ceil') %}
        {% for item in 1..pages %}
            <li class="{{ (page == item) ? 'active' : '' }}">
                <a href="?page={{ item }}">{{ item }}</a>
            </li>
        {% endfor %}
        <li class="{{ (page == pages) ? 'disabled' : '' }}">
            <a href="{{ (page < pages) ? '?page=' ~ (page + 1) : '' }}">
                <i class="fas fa-angle-right"></i>
            </a>
        </li>
        <li class="{{ (page == pages) ? 'disabled' : '' }}">
            <a href="?page={{ pages }}">
                <i class="fas fa-step-forward"></i>
            </a>
        </li>

    </ul>

        </div>
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/mainsidebar.js"></script>



    <script>
        // Add event listener to update event buttons
        const updateButtons = document.querySelectorAll('.updateEventBtn');
        updateButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Get the event ID from the data attribute
                const eventId = this.getAttribute('data-event-id');
                // Redirect to the update-event page with the event ID
                window.location.href = '/update-event/' + eventId;
            });
        });
    </script>


    <script>
    document.querySelectorAll('.register-interest-btn').forEach(button => {
        button.addEventListener('click', function() {
            const eventId = this.getAttribute('data-event-id');

            // Send an AJAX request to the controller endpoint
            fetch('/register-interest', {
                method: 'POST',
                body: JSON.stringify({ eventId: eventId }), // Send the event ID in the request body
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                if (response.ok) {
                    // Handle successful registration
                    alert('Event added to My events!');
                } else {
                    // Handle error
                    alert('Error registering interest for the event.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    });
</script>
<script>
window.onload = () => {
    const FiltersForm = document.querySelector("#filters");

    // On boucle sur les input
    document.querySelectorAll("#filters input").forEach(input => {
        input.addEventListener("change", () => {
            // Submit the form when any input changes
            FiltersForm.submit();
        });
    });
}

</script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const registerInterestBtn = document.getElementById('registerInterestBtn');

        registerInterestBtn.addEventListener('click', function() {
            registerInterestBtn.disabled = true;
            registerInterestBtn.innerText = 'Interest Registered';
        });
    });
</script>


{% endblock %}
